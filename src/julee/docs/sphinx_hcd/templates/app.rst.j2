{% from "base.rst.j2" import page_title, preamble, epilogue, option, option_list, directive_content %}
{# App entity RST template #}
{{ page_title(entity.page_title) -}}
{{ preamble(entity.preamble_rst) -}}
.. define-app:: {{ entity.slug }}
{% if entity.name and entity.name != entity.slug %}
   :name: {{ entity.name }}
{% endif %}
{% if entity.app_type and entity.app_type.value != 'unknown' %}
   :type: {{ entity.app_type.value }}
{% endif %}
{{ option('status', entity.status) -}}
{{ option_list('accelerators', entity.accelerators) -}}
{{ directive_content(entity.description) }}
{{ epilogue(entity.epilogue_rst) }}
